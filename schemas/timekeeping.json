{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "time": { "$ref": "./libs/time.json" },
        "status": {
            "type": "string",
            "enum": [
                "paused",
                "in_progress",
                "finished",
                "not_running"
            ]
        }
    },
    "required": [
        "time",
        "status"
    ]
}